@model IEnumerable<DariGroupe.Models.Announcement>

@{
    ViewBag.Title = "IndexFront";
    Layout = "~/Views/Shared/simple.cshtml";
}

<h2>IndexFront</h2>

<table class="table">
    <tr>
        <th style="text-align: center; background-color: #27DA93;  color: white;font-size: 20px">
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th style="text-align: center; background-color: #27DA93;  color: white; font-size: 20px">
            @Html.DisplayNameFor(model => model.description)
        </th>

        <th style="text-align: center; background-color: #27DA93;  color: white; font-size: 20px">
            @Html.DisplayNameFor(model => model.type)
        </th>
        <th style="text-align: center; background-color: #27DA93;  color: white; font-size: 20px">
            @Html.DisplayNameFor(model => model.startDate)
        </th>
        <th style="text-align: center;background-color: #27DA93 ;  color: white;font-size: 20px">
            @Html.DisplayNameFor(model => model.duration)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.description)
            </td>

            <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.type)
            </td>
            <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.startDate)
            </td>

            <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.duration)
            </td>

        </tr>
    }

</table>
<a style="        border-radius: 8px;
        background-color: #27DA93;
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        text-align: center;
        font-size: 16px;" href="../Home/Index">Go Back</a>